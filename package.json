{
  "name": "zeebe-modeler-builder",
  "version": "0.5.0",
  "description": "Zeebe Modeler for BPMN based on bpmn.io",
  "scripts": {
    "app:auto-test": "npm run app:test -- --watch",
    "app:dev": "electron ./app/dev.js",
    "app:test": "mocha -r ./app/test/expect --recursive app/test",
    "client:build": "(cd client && npm run build)",
    "client:auto-test": "(cd client && npm run auto-test)",
    "client:dev": "(cd client && npm run dev)",
    "client:test": "(cd client && npm run test)",
    "all": "run-s clean lint test \"build -- {@}\" --",
    "auto-test": "run-p *:auto-test",
    "clean": "del-cli 'distro/*' app/public",
    "dev": "run-p *:dev",
    "distro": "node tasks/distro.js",
    "distro:test-archives": "node tasks/test-distro.js",
    "build": "run-s client:build \"distro -- {@}\" \"distro:test-archives -- {@}\" --",
    "lint": "eslint .",
    "postinstall": "lerna bootstrap --hoist",
    "release": "lerna publish --force-publish",
    "test": "run-s *:test",
    "sync": "node tasks/sync-fork.js"
  },
  "author": "Camunda <http://camunda.com>",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/camunda/camunda-modeler",
  "repository": {
    "type": "git",
    "url": "https://github.com/camunda/camunda-modeler"
  },
  "devDependencies": {
    "archiver": "^3.0.0",
    "chai": "^4.2.0",
    "cpx": "^1.5.0",
    "decompress": "^4.2.0",
    "del": "^3.0.0",
    "del-cli": "^1.1.0",
    "electron": "^3.0.14",
    "electron-builder": "~20.28.4",
    "electron-publisher-s3": "^20.17.2",
    "electron-reloader": "^0.2.0",
    "eslint": "^5.12.0",
    "eslint-plugin-bpmn-io": "^0.6.0",
    "eslint-plugin-import": "^2.14.0",
    "execa": "^1.0.0",
    "lerna": "^3.8.5",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "simple-git": "^1.107.0",
    "sinon": "^7.2.3",
    "sinon-chai": "^3.3.0",
    "which": "^1.2.0",
    "yargs": "^12.0.5"
  }
}
